@model CCMS.NEOPE.Application.ViewModels.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Portal do Comissionamento</title>
    
    <environment include="Development">
        <link href="~/lib/materialize/css/materialize.css" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
        <link href="~/css/users.css" rel="stylesheet"/>
    </environment>
    
    <environment exclude="Development">
        <link href="~/lib/materialize/css/materialize.min.css" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
        <link href="~/css/users.css" rel="stylesheet"/>
    </environment>
    
</head>

<body class="body container">

<div class="registerForm card">
    <div class="center-align">
        <h4><i class="large material-icons">account_circle</i></h4>
        <h5>Novo usu√°rio</h5>
    </div>
    
    <div>
        <form asp-action="Register" asp-controller="Users" method="Post" enctype="multipart/form-data">
            <div class="fields">
                <div class="red-text text-darken-4" asp-validation-summary="ModelOnly"></div>
            </div>
            
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="FullName" class="validate" id="FullName"/>
                    <label asp-for="FullName" id="FullName"></label>
                    <span asp-validation-for="FullName" class="red-text text-darken-4"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Email" class="validate" id="Email"/>
                    <label asp-for="Email" id="Email"></label>
                    <span asp-validation-for="Email" class="red-text text-darken-4"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="file-field input-field col s12">
                    <div class="btn-small">
                        <span>Selecione sua foto</span>
                        <input asp-for="Photo" type="file" class="validate" id="photo"/>
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text"/>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="UserName" class="validate" id="UserName"/>
                    <label asp-for="UserName" id="UserName"></label>
                    <span asp-validation-for="UserName" class="red-text text-darken-4"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Password" class="validate" id="Password"/>
                    <label asp-for="Password" id="Password"></label>
                    <span asp-validation-for="Password" class="red-text text-darken-4"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="ConfirmPassword" class="validate" id="ConfirmPassword"/>
                    <label asp-for="ConfirmPassword" id="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="red-text text-darken-4"></span>
                </div>
            </div>
            <div class="buttons right">
                <button type="submit" class="waves-effect waves-light btn green darken-4">Registrar</button>
            </div>            
        </form>
    </div>
     
</div>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/materialize/js/materialize.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</environment>


<environment exclude="Development">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/materialize/js/materialize.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</environment>

</body>
</html>