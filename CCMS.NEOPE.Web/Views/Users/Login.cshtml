@model CCMS.NEOPE.Application.ViewModels.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Portal do Comissionamento</title>
    
    <environment include="Development">
        <link href="~/lib/materialize/css/materialize.css" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
        <link href="~/css/users.css" rel="stylesheet"/>
    </environment>
    
    <environment exclude="Development">
        <link href="~/lib/materialize/css/materialize.min.css" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
        <link href="~/css/users.css" rel="stylesheet"/>
    </environment>
    
</head>

<body class="body container">

<div class="loginForm card">
    <div class="center-align">
        <h4><i class="large material-icons">account_circle</i></h4>
        <h5>Entrar</h5>
    </div>
    
    <div>
        <form asp-action="Login">
            <div class="fields">
                <div class="red-text text-darken-4" asp-validation-summary="ModelOnly"></div>
            </div>
            
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="UserName" class="validate" id="UserName"/>
                    <label asp-for="UserName" id="UserName"></label>
                    <span asp-validation-for="UserName" class="red-text text-darken-4"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Password" class="validate" id="Password"/>
                    <label asp-for="Password" id="Password"></label>
                    <span asp-validation-for="Password" class="red-text text-darken-4"></span>
                </div>
            </div>
            
            <div class="buttons right">
                <div class="">
                    <button type="submit" class="waves-effect waves-light btn green darken-4">LogIn</button>
                </div>
            </div>             
        </form>
    </div>
     
</div>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/materialize/js/materialize.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</environment>


<environment exclude="Development">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/materialize/js/materialize.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</environment>

</body>
</html>