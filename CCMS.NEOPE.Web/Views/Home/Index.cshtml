@{
    ViewData["Title"] = "Início";
    Layout = "_Layout";
}
@section Styles
{
    <link rel="stylesheet" href="/css/summary.css"/>
}

    
<div class="section container">
    
    <div id="kpis" class="row">
        <div class="col s2">
            <!--kpi start bellow-->
            <div class="kpi">
                <div class="kpi-header tooltipped" data-position="top" data-tooltip="Progresso Geral">
                    <div class="kpi-title" name="ProgressoGeral" aria-label="Progresso Geral">PG</div>
                </div>
                <div class="kpi-value card center" >
                    <div id="progressCard">Loading...</div>
                </div>
            </div>

        </div>
        <div class="col s2">
            <!--kpi start bellow-->
            <div class="kpi">
                <div class="kpi-header tooltipped" data-position="top" data-tooltip="Conformidade Geral" >
                    <div class="kpi-title " name="ConformidadeGeral" aria-label="Conformidade Geral">CG</div>
                </div>
                <div class="kpi-value card center">
                    <div id="conformityCard">Loading...</div>
                </div>
            </div>

        </div>
        <div class="col s4">
            <!--kpi start bellow-->
            <div class="kpi">
                <div class="kpi-header tooltipped" data-position="top" data-tooltip="Acompanhamento de pendências no SAP" >
                    <div class="kpi-title" name="APOS" aria-label="APOS" >APOS</div>
                </div>
                <div class="kpi-value card center">
                    <div id="apos">Loading...</div>
                </div>
            </div>

        </div>
        <div class="col s2">
            <!--kpi start bellow-->
            <div class="kpi">
                <div class="kpi-header tooltipped" data-position="top" data-tooltip="Aderência Geral" >
                    <div class="kpi-title" name="AderenciaGeral" aria-label="Aderência Geral" >AG</div>
                </div>
                <div class="kpi-value card center">
                    <div id="adherenceCard">Loading...</div>
                </div>
            </div>

        </div>
        
        <div class="col s2">
            <!--kpi start bellow-->
            <div class="kpi">
                <div class="kpi-header tooltipped" data-position="top" data-tooltip="Qualidade de Obra" >
                    <div class="kpi-title" name="QualidadeObra" aria-label="Qualidade de Obra" >QO</div>
                </div>
                <div class="kpi-value card center">
                    <div id="qo">Loading...</div>
                </div>
            </div>

        </div>
    </div>
    <div id="progresses" class="row">
            <div class="col s6">
                 <div class="kpi-header"  >
                    <div class="kpi-title" name="progressPerStep" >Progresso por Etapa</div>
                </div>
                <div class="card">
                    <div id="progressPerEtapas" style="min-height: 400px;min-width: 300px"></div>
                </div>
            </div>
            <div class="col s6">
                 <div class="kpi-header"  >
                    <div class="kpi-title" name="progressPerCategory"  >Progresso por Categoria</div>
                </div>
                <div class="card">
                    <div id="progressPerCategorias" style="min-height: 400px;min-width: 300px"></div>
                </div>
            </div>
        </div>
    <div id="pendencies" class="row">
        <div class="col s6">
             <div class="kpi-header"  >
                <div class="kpi-title" name="pendenciaPerStep"  >Pendências por Etapa</div>
            </div>
            <div class="card">
                <div id="pendeciasPerEtapas" style="min-height: 400px;min-width: 300px"></div>
            </div>
        </div>
        <div class="col s6">
             <div class="kpi-header"  >
                <div class="kpi-title" name="pendenciaPerCategory"  >Pendências por Categoria</div>
            </div>
            <div class="card">
                <div id="pendeciasPerCategorias" style="min-height: 400px;min-width: 300px"></div>
            </div>
        </div>
    </div>
    <div id="actions" class="row">
        
    </div>
    
</div>



@section Scripts
{
    <script src="/lib/echarts/js/echarts.min.js"></script>
    <script src="/js/Summary/summary.js"></script>
}