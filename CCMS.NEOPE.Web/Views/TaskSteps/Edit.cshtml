@model CCMS.NEOPE.Application.ViewModels.TaskStep.EditTaskStepModel

@{
    Layout = "_Layout";
}

<div class="section container">
    <div class="no-padding white">
        <div class="section-header">
            <h5 class="section-title">Atualizar etapa de comissionamento</h5>    
        </div>
        <div class="row">
            <div class="col s12">
                <div>
                    <form  asp-controller="TaskSteps" asp-action="Edit" method="POST">
                        <div class="card">
                            <div class="fields">
                                <div class="red-text text-darken-4" asp-validation-summary="ModelOnly"></div>
                            </div>
                            @Html.HiddenFor(m => m.Id)
                
                            <div class="row">
                                <div class="input-field col s6">
                                    <input asp-for="Name" class="validate" id="Name"/>
                                    <label asp-for="Name" id="Name"></label>
                                    <span asp-validation-for="Name" class="red-text text-darken-4"></span>
                                </div>
                            </div>
                            
                        </div>
                        <div class="buttons right">
                            <a class="waves-effect waves-light btn grey" asp-action="Index">Cancelar</a>
                            <a class="waves-effect waves-light btn red modal-trigger" href="#cancelModal">Deletar</a>
                            <a id="deleteLink" asp-action="Delete" asp-route-id="@Model.Id" style="display: none;"></a>
                            <button type="submit" class="waves-effect waves-light btn green darken-4">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
    
</div>

<!-- Modal Structure -->
<div id="cancelModal" class="modal">
    <div class="modal-content">
        <p>Tem certeza que deseja deletar?</p>
    </div>
    <div class="modal-footer">
        <a href="#" class="modal-close waves-effect waves-light btn grey">Cancelar</a>
        <a id="ok" asp-action="Index" asp-controller="TaskSteps" class="modal-close waves-effect waves-light btn green darken-4">Sim</a>
    </div>
</div>

@section Scripts
{
    <script src="~/js/delete-modal.js"></script>
}